<Window x:Class="UiFoxStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiFoxStudio"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="14,13,0,0">
            <Button Command="{Binding StartCommand}" Content="Start" Width="100" Height="50" />
            <Button Command="{Binding StopCommand}" Content="Stop" Width="100" Height="50" Margin="0,10,0,0" />
            <!--<TextBlock Text="{Binding MousePosition}" Margin="0,20,0,0" TextAlignment="Center"/>-->
        </StackPanel>
    </Grid>
</Window>
